# this is Berkeley Mono which I patched with nerd fonts myself. I can't give it out unfortunately - sorry!
font-family = BMono Nerd Font 
background-opacity = 0.95
background-blur-radius = 70
theme = Rose Pine
background = #1F1F28
font-size = 14
window-padding-x = 18
window-padding-y = 16
font-thicken = true
macos-titlebar-style = hidden
macos-icon = retro


# ======== tmux bindings because I'm lazy ========

# switch windows by number

keybind = super+digit1=text:\x021
keybind = super+digit2=text:\x022
keybind = super+digit3=text:\x023
keybind = super+digit4=text:\x024
keybind = super+digit5=text:\x025
keybind = super+digit6=text:\x026
keybind = super+digit7=text:\x027
keybind = super+digit8=text:\x028
keybind = super+digit9=text:\x029


# open new window 
keybind = super+keyT=text:\x02c

# close window
keybind = super+keyW=text:\x02x

# open session view
keybind = super+keyO=text:\x02s

# open last session
keybind = super+keyL=text:\x02L

# horizontal split
keybind = super+keyN=text:\x02\"

# vertical split
keybind = super+shift+keyN=text:\x02%

# fullscreen pane
keybind = super+keyZ=text:\x02z

# switch panes with direction
keybind = super+left=text:\x02\x1b[D
keybind = super+right=text:\x02\x1b[C
keybind = super+up=text:\x02\x1b[A
keybind = super+down=text:\x02\x1b[B


# cmd+K to clear doesn't work in tmux by default
keybind = super+keyK=text:\x0c
